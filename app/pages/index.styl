.page
  font-size 25px
  text-align center
  color #444

.wrap
  position relative

.play
.button-end
  position absolute
  top 50%
  left 50%
  width 200px
  height 50px
  display flex
  justify-content center
  align-items center
  text-transform uppercase
  background #333
  font-size 16px
  color #fff
  border none
  cursor pointer
  transform translate(-50%, -50%)

  &_hide
    display none

.wrap-end
  position absolute
  top 50%
  left 50%
  padding 10px
  display none
  width 250px
  background-color #fff
  transform translate(-50%, -50%)

  &_show
    display block

.buttons
  display flex
  justify-content space-between
  align-items center

.button-end
  position static
  transform none
  width calc((100% / 2) - 5px)

  &:first-child
    margin-right 10px
